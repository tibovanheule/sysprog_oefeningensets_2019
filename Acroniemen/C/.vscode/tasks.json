{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "-Wall",
                "-D__USE_MINGW_ANSI_STDIO=1",
                "acronym.c",
                "main.c",
                "priority_queue.c",
                "../leaker/leaker.c",
                "-o",
                "acronym.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
